@model WebApplication2.Models.Winery
@{
    ViewBag.Title = "WineryEdit";
}

<h2>資料變更</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.WineryName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WineryName, "酒莊名稱", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.WineryName, "酒莊名稱", new { htmlAttributes = new { @class = "form-control col-sm-4", @required = "required", @id = "name" } })
                @Html.ValidationMessageFor(model => model.WineryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WineryPhone, "酒莊電話", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.WineryPhone, "酒莊電話", new { htmlAttributes = new { @class = "form-control col-sm-4", @required = "required", @id = "phone" } })
                @Html.ValidationMessageFor(model => model.WineryPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WineryAddress, "酒莊地址", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.WineryAddress, "酒莊地址", new { htmlAttributes = new { @class = "form-control col-sm-4", @required = "required", @id = "address" } })
                @Html.ValidationMessageFor(model => model.WineryAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WineryEmail, "酒莊聯絡信箱", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.WineryEmail, "酒莊聯絡信箱", new { htmlAttributes = new { @class = "form-control col-sm-4", @required = "required", @id = "email" } })
                @Html.ValidationMessageFor(model => model.WineryEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-4">
                <input id="submit" type="submit" value="送出" onclick="return confirm('確定修改')" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        $(function () {
            $('#collapseMember').collapse('show');
        })
    </script>
}