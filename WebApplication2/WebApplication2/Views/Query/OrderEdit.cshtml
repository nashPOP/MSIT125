@model WebApplication2.Order

@{
    ViewBag.Title = "OrderEdit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <div class="card-header py-3">
            <h3>訂單編輯</h3>
        </div>
        <div class="card-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.OrderID)

                <div class="form-group row">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.WineryID, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.WineryID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.WineryID, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.RequiredDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RequiredDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.ShippedDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.ShippedDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShippedDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="儲存" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("回查詢訂單頁面", "OrderQuery" ,null,htmlAttributes:new { @class="btn btn-info"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
