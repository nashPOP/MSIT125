@model WebApplication2.ModelViews.QueryModelByView
@{
    ViewBag.Title = "Stock";
}

<div class="card shadow mb-4">
    <div class="card-header py-2  d-flex flex-row">
        <h2>存貨查詢</h2>
    </div>
    <div class="card-body">
        @Html.BeginForm(){
        <form>
            <div class="form-group row">
                <div class="col-sm-1">
                    <label for="TB_ProductID" id="LB_ProductID">商品編號：</label>
                    @*@Html.LabelFor(Model=>Model.orderid,htmlAttributes:new {@class="" });*@
                </div>
                <div class="col-sm-3">
                    @Html.TextBox("TB_ProductID","",new {@class="form-control" });
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <label for="DDL_Category" id="LB_Category">分類：</label>
                </div>
                <div class="col-sm-3">
                    @Html.DropDownList("DDL_Category", (IEnumerable<SelectListItem>)Model.Categoryddl, new { @class="form-control"})
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-1">
                    <label for="DDL_Product" id="lbProduct">商品名稱：</label>
                </div>
                <div class="col-sm-3">
                    @Html.DropDownList("DDL_Product", (IEnumerable<SelectListItem>)Model.Productddl, new { @class = "form-control" })
                    @*<select id="tbProduct" name="tbProduct" class="form-control">
                        <option>葡萄酒</option>
                        <option>白葡萄酒</option>
                    </select>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <label for="DDL_Winery" id="LB_Winery">酒莊：</label>
                </div>
                <div class="col-sm-3">
                    @*@Html.DropDownList("DDL_Winery",(IEnumerable<SelectListItem>)Model.Wineryddl,new { @class = "form-control" })*@
                    @*<select id="tbCategory" name="tbCategory" class="form-control">
                        <option>酒莊1</option>
                        <option>酒莊2</option>
                    </select>*@
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3"></div>
            </div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <label for="DDL_Winery" id="LB_Winery">容量：</label>
                </div>
                <div class="col-sm-3">
                    @Html.DropDownList("DDL_Winery", (IEnumerable<SelectListItem>)Model.Millilterddl, new { @class = "form-control" })
                </div>
                <div class="col-sm-1"><button class="btn btn-primary"><span class="fa fa-plus"></span></button></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <label for="DDL_Shelf" id="LB_Shelf">倉儲位置：</label>
                </div>
                <div class="col-sm-3">
                    @Html.DropDownList("DDL_Shelf",(IEnumerable<SelectListItem>)Model.Shellddl,htmlAttributes:new { @class= "form-control" })
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-1">
                    <label for="D_StockEnterDate" id="LB_StockEnterDate">入庫時間：</label>
                </div>
                <div class="col-sm-3">
                    <input type="date" id="D_StockEnterDate" name="D_StockEnterDate" class="form-control" />

                </div>
            </div>
            <button type="submit" class="btn btn-primary"><span class="fa fa-search"></span>&nbsp;查詢</button>
        </form>
        }
    </div>
</div>
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row">
        <h3>存貨列表</h3>
    </div>
    <div class="card-body">
        <div class="row">

        </div>
        <div class="row">
            <div class="col-sm-12">


                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>編號</th>
                            <th>商品號碼</th>
                            <th>商品名稱</th>
                            <th>酒莊</th>
                            <th>容量</th>
                            <th>重量</th>
                            <th>瓶數</th>
                            <th>入庫數量</th>
                            <th>倉儲位置</th>
                            <th>備註</th>
                            <th>入庫時間</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StockEnterlist)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockEnterID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Winery.WineryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Milliliter.Milliliter1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shelf.ShelfPosition)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockEnterDate)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink("編輯", "", new { @class = "btn btn-success" });
                                    @Html.ActionLink("刪除", "", new { @class = "btn btn-danger" });
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>