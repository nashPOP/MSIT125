@model WebApplication2.Models.Account

@{
    ViewBag.Title = "EditPassWord";
}
@section style{
<style>
    * {
        font-family: Nunito,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji",標楷體;
    }
</style>
}
<h2>修改密碼</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>帳戶</h4>
        <hr />
        @Html.ValidationSummary(true, "帳號密碼有誤,無法進行修改!", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.AccountId)*@

        <div class="form-group">
            @Html.LabelFor(model => model.Account1,"帳號",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Account1, new { htmlAttributes = new { @class = "form-control", @id = "login" } })
                @Html.ValidationMessageFor(model => model.Account1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, "確認舊密碼", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "oldpwd" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*<label class="control-label col-md-2">輸入新密碼</label>*@
            @Html.LabelFor(model => model.Password, "輸入新密碼", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-4">
                <input class="form-control text-box single-line " id="newpwd" name="Password1" type="text">
                @*<input class = "form-control", id = "newpwd", required = "required" />*@
                @*<input class="text-danger" id="messages"/>*@
                @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "newpwd", @required = "required",@name="Password1" } })*@
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-sm-4">
                <input type="submit" value="送出" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

